@model DroneWorks.Models.Products

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="modal-title">Dr⚙neW⚙rks - Details</h3>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @*@Html.DisplayNameFor(model => model.ProdName)*@
            Product Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdName)
        </dd>
        <dt class="col-sm-4">
            @*@Html.DisplayNameFor(model => model.ProdDescribe)*@
            Product Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdDescribe)
        </dd>
        <dt class="col-sm-4">
            @*@Html.DisplayNameFor(model => model.ProdPrice)*@
            Price
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.ProdPrice)
        </dd>

        <dt class="col-sm-4">
            Picture
        </dt>
        <dd class="col-sm-10">
            <img src="~/Images/@Model.ImageName" alt="Picture Not Available" width="60%" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="AddToCart" asp-route-id="@Model.ProdPk" class="btn btn-success btn-sm">Add to Cart</a>
    <a asp-action="Index" class="btn btn-sm btn-warning">Back to Search</a>
</div>

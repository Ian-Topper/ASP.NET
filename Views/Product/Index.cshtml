            <th>
                Category
                @Html.DisplayNameFor(model => model.CatFkNavigation.Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProdName)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.ProdDescribe)
                    </td>*@
                <td>
                    $ @Html.DisplayFor(modelItem => item.ProdPrice)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.ImageName)*@
                    <img src="~/Images/@item.ImageName" alt="Picture Not Available" width="80%" />
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.TotalStock)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.CatFkNavigation.Type)
                </td>
                <td>
                   
                    <a asp-action="Details" asp-route-id="@item.ProdPk">Details</a>
                </td>
            </tr>
        }
    </tbody>

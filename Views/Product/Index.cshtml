<table class="table">
    <thead>
        <tr>
            <th>
                Product
                @*@Html.DisplayNameFor(model => model.ProdName)*@
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.ProdDescribe)
                </th>*@
            <th>
                Price
                @*@Html.DisplayNameFor(model => model.ProdPrice)*@
            </th>
            <th>
                <center>Image</center>
                @*@Html.DisplayNameFor(model => model.ImageName)*@
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.TotalStock)

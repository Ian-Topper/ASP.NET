@model DroneWorks.Models.Products

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h3>Are you sure you want to delete this?</h3>
@if (ViewData["message"] != null)
{
    <div class="alert alert-danger">@ViewData["message"]</div>
}
<div>
    <dl class="row">
        <dt class="col-sm-2">
            <br />   Type:
        </dt>
        <dd class="col-sm-10">
            <br /> @Html.DisplayFor(model => model.CatFkNavigation.Type)
        </dd>
        <dt class="col-sm-2">
            <br />  Name:
        </dt>
        <dd class="col-sm-10">
            <br />   @Html.DisplayFor(model => model.ProdName)
        </dd>
        <dt class="col-sm-2">
            <br />  Photo:
        </dt>
        <dd class="col-sm-10">
            <br />  <img src="~/Images/@Model.ImageName" alt="Picture Not Available" width="40%" />
        </dd>
        <dt class="col-sm-2">
            <br />  Description:
        </dt>
        <dd class="col-sm-10">
            <br />  @Html.DisplayFor(model => model.ProdDescribe)
        </dd>
        <dt class="col-sm-2">
            <br />  Price:
        </dt>
        <dd class="col-sm-10">
            <br />  $@Html.DisplayFor(model => model.ProdPrice)
        </dd>

        <dt class="col-sm-2">
            <br />  Stock:
        </dt>
        <dd class="col-sm-10">
            <br />  @Html.DisplayFor(model => model.TotalStock)
            <br />
        </dd>

    </dl>
</div>
<div>
    <br /><br />
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ProdPk" />
        <input type="submit" value="Execute Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
    <br />
</div>
